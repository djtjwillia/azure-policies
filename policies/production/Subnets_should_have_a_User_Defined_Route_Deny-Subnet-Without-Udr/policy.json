{
 "properties": {
  "displayName": "Subnets should have a User Defined Route",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy denies the creation of a subnet with out a User Defined Route.",
  "metadata": {
   "category": "Network",
   "version": "1.1.0",
   "createdBy": "b86858e4-c04b-4ff5-8527-32ed457b3a26",
   "createdOn": "2022-02-18T15:57:17.7695243Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "description": "Enable or disable the execution of the policy",
     "displayName": "Effect"
    },
    "allowedValues": [
     "Audit",
     "Deny",
     "Disabled"
    ],
    "defaultValue": "Deny"
   },
   "excludedSubnets": {
    "type": "Array",
    "metadata": {
     "description": "Array of subnet names that are excluded from this policy",
     "displayName": "Excluded Subnets"
    },
    "defaultValue": [
     "AzureBastionSubnet"
    ]
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "equals": "Microsoft.Network/virtualNetworks/subnets",
      "field": "type"
     },
     {
      "field": "name",
      "notIn": "[parameters('excludedSubnets')]"
     },
     {
      "exists": "false",
      "field": "Microsoft.Network/virtualNetworks/subnets/routeTable.id"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementgroups/es/providers/Microsoft.Authorization/policyDefinitions/Deny-Subnet-Without-Udr",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-Subnet-Without-Udr"
}